<% layout('admin/layout') -%>
<span class="container mx-auto mt-8 p-4">
        <h2 class="text-2xl font-bold text-gray-800 mb-6 font-mono">Endpoints da API v1.0</h2>

        <div class="space-y-6">
            <% endpoints.forEach(route => { %>
                <div class="bg-white rounded-lg shadow-md border-l-8 <%= route.method === 'POST' ? 'border-green-500' : 'border-blue-500' %> overflow-hidden">
                    <div class="p-4 flex items-center space-x-4 bg-gray-50">
                        <span class="px-3 py-1 rounded text-white font-bold text-xs <%= route.method === 'POST' ? 'bg-green-600' : 'bg-blue-600' %>">
                            <%= route.method %>
                        </span>
                        <code class="text-gray-800 font-bold text-lg"><%= route.path %></code>
                    </div>
                    <div class="p-4 grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm text-gray-600 mb-2 font-bold uppercase">Descrição:</p>
                            <p class="text-gray-700 text-sm"><%= route.desc %></p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600 mb-2 font-bold uppercase">Exemplo de Body (JSON):</p>
                            <pre class="bg-gray-900 text-green-400 p-3 rounded text-xs"><%= route.body %></pre>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
</span>